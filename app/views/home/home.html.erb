<% @body_class = 'index' %>
<% user = User.find(session[:user_id]) %>
<div class="row">
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    
    <div class="container">

      <div class="navbar-header">
        <a id="brandHelloMusic" class="navbar-brand active" href="#">HelloMusic</a>
      </div>
      
     

      <ul class="nav pull-right" style="padding-right:30px; padding-top:8px;">
        <li><button id="btnLogout" class="btn btn-default" >Logout</button></li>

         <% if user.permissions == "administrator" %>
        <li><button id="btnNavAdmin" class="btn btn-default" >Admin</button></li>
        <% end %>

      </ul>
    </div><!-- /.container -->

  </nav>
</div> <!-- /.row -->



<!-- SCREENS -->
<% unless user.subscribed.nil? %>

  <div class="container">
    <div id="home" class="col-xs-12">
        <div id="sidebarLeft">
          <label class="left" >&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
        </div>
        <div id="stage">
          
          <!-- SCREEN ONE -->
          <div id="loginAbout" data-scene="0" data-layer="0">
            <div id="news_wrap">
              <div id="news_blob">
               <div class="">
                <h1>Welcome to HelloMusic, the best online music store.</h1>
                <br/>
                <h2>Please enjoy our streaming and downloading services for your favourite songs</h2>
               </div>
              </div>
              <hr/>
            </div>
          </div>
          
          <!-- SCREEN TWO -->
          <div  id="loginWelcome"  data-scene="1" data-layer="0">
            <div id="lib" class="container"> 
            <div class="row">
              <h1> Library </h1>
            </div>           
              <div id='lib_searchBar' class="row">
                <input type="text" name="searchBar" placeholder="Search..." />
                <label>Title:<input type="checkbox" name="title_check" /></label>
                <label>Artist:<input type="checkbox" name="artist_check" /></label>
                <label>Album:<input type="checkbox" name="album_check" /></label>
              </div>
              <div id="lib_results" class="row">
              </div>
            </div> 
          </div>
          
          <!-- SCREEN THREE -->
          <div id="loginExtra"  data-scene="2" data-layer="0">
            <div class="edit_profile_container">
                
            
              <div class="row ">
                <div class="col-md-4 col-md-offset-4">
                <%= render partial: "edit_user_profile_path", locals: {user: session[:user_id]} %>
                </div>
              </div>

            </div>
          </div>

        </div>
         <div id="sidebarRight">
          <label  class="right" >&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
      </div>
  </div>

<!--  <div id="gradient"></div>  -->
  <div id="player">
    <div id="jquery_jplayer_1" class="cp-jplayer"></div>
    <div class="prototype-wrapper"> <!-- A wrapper to emulate use in a webpage and center align -->
      <!-- The container for the interface can go where you want to display it. Show and hide it as you need. -->
      <div id="cp_container_1" class="cp-container">
        <div class="cp-buffer-holder"> <!-- .cp-gt50 only needed when buffer is > than 50% -->
          <div class="cp-buffer-1"></div>
          <div class="cp-buffer-2"></div>
        </div>
        <div class="cp-progress-holder"> <!-- .cp-gt50 only needed when progress is > than 50% -->
          <div class="cp-progress-1"></div>
          <div class="cp-progress-2"></div>
        </div>
        <div class="cp-circle-control"></div>
        <ul class="cp-controls">
          <li><a class="cp-play" tabindex="1">play</a></li>
          <li><a class="cp-pause" style="display:none;" tabindex="1">pause</a></li> <!-- Needs the inline style here, or jQuery.show() uses display:inline instead of display:block -->
        </ul>
      </div>
    </div>

  </div>
</div>

<!-- PLAYER END-->
<% else %>
  <%= render partial: 'subscribe' %>
<% end %>
</div>

