<div
  id="landing_signup"
  class="row">

  <div class="col-xs-6">

    <h1>Register for Unlimited Access</h1>

    <%= form_tag(action: 'register', method: 'post', controller: 'home', multipart: true) do %>

      <div class="field form-group">
        <label for="email">Email</label> 
        <%= text_field_tag "email", "", class: "form-control" %>
        <p class="help-block">This will be your username for the
          HelloMusic application</p>
      </div>
      <div class="field form-group">

        <label for="password">Password</label> 
        <%= password_field_tag "password", "", class: "form-control" %>
        <p class="help-block">Please use a strong password to keep your
          account secure</p>
      </div>
      <div class="field">
        <label>First name</label> 
        <%= text_field_tag "first_name", "", class: "form-control" %>
      </div>
      <div class="field">
        <label>Last name</label> 
        <%= text_field_tag "last_name", "", class: "form-control" %>
      </div>
      <div class="field">
        <label>Date of birth</label>
         <%= text_field_tag "date_of_birth", "", class: "form-control" %>
      </div>
      <div class="field form-group">
        <label>Gender</label>
        <div class="radio">
          <label> <input
            type="radio"
            name="gender"
            id="gender"
            value="male"
            checked=""> Male
          </label>
        </div>
        <div class="radio">
          <label> <input
            type="radio"
            name="gender"
            id="optionsRadios2"
            value="option2"> Female
          </label>
        </div>
      </div>
      <div class="actions">
        <input type="submit" class="btn btn-large btn-primary" id="btnSignup" value="Sign up!"/>
      </div>
    <% end %>
  </div>

      <div class="jumbotron">
    <h1>HelloMusic Store</h1>
    <p>A fun place to hangout and listen to some great music!</p>
  </div>

</div>