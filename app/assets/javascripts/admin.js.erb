$(document).ready(function(){

	console.log("start");

	$('#brandHelloMusic').click(function(){

		hideContainers();
	    $("#landingContainer").css('display', 'block');
	    $("#navAdminHome").parent().addClass("active");

	});

	$('#nav_manage_songs').click(function(){

		hideContainers();	
		$('#songsContainer').load( "songs" );	
		$("#songsContainer").css('display', 'block');

	    $("#nav_manage_songs").parent().addClass("active");
	    

	});

	$('#nav_admin_manage_users').click(function(){

		hideContainers();
		$('#usersContainer').load( "users" );
		$("#usersContainer").css('display', 'block');
	    $("#nav_admin_manage_users").parent().addClass("active");

	});

	$('#nav_reports').click(function(){
		
		hideContainers();
		$("#reportsContainer").css('display', 'block');
	    $("#nav_reports").parent().addClass("active");

	});

});

function hideContainers (){

	$("#landingContainer").css('display', 'none');
	$("#songsContainer").css('display', 'none');
	$("#reportsContainer").css('display', 'none');
	$("#usersContainer").css('display', 'none');

    $("#nav_reports").parent().removeClass("active");
    $("#nav_admin_manage_users").parent().removeClass("active");	    
    $("#nav_manage_songs").parent().removeClass("active");
    $("#navAdminHome").parent().removeClass("active");

}