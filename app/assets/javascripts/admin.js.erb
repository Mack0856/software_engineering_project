$(document).ready(function(){

	$('#navAdminHome').click(function(){

		clearContainers();
	    //$("#songsContainer").css('display', 'block');
	});

	$('button[data-nav="admin-reports"]').click(function(){

		clearContainers();		
		$("#reportsContainer").css('display', 'block');
	});

	$('button[data-nav="admin-manage-users"]').click(function(){
		clearContainers();
		$('#mainContainer').load("users");
		$("#reportsContainer").css('display', 'block');

	});

	$('button[data-nav="admin-manage-songs"]').click(function(){
		clearContainers();
		$('#songs').load( "songs" );
	});

});

function clearContainers (){

	$("#landingContainer").css('display', 'none');
	$("#songsContainer").css('display', 'none');
	$("#reportsContainer").css('display', 'none');
	$("#usersContainer").css('display', 'none');

}